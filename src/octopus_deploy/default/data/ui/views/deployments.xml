<dashboard script="deploymentsByHour.js, longDeployments.js, deploymentPunchCard.js, deploymentOutcomeByProject.js, deploymentDuration.js"
  stylesheet="octopusdeploy.css">
  <label>Deployments</label>

  <fieldset autoRun="true" submitButton="false">
      <input id="timerange" type="time" searchWhenChanged="true">
          <default>
              <earliestTime>-24h</earliestTime>
              <latestTime>now</latestTime>
          </default>
      </input>
  </fieldset>
  <row>
    <html>
      <h2>Punch Card</h2>
      <div id="deploymentPunchCard">
          <svg id="deploymentPunchCardChart"></svg>
      </div>
    </html>
  </row>
  <row>
    <panel>
      <html>
        <h2>Longest Deployments</h2>
        <div id="longDeployments">
            <svg id="longDeploymentsChart"></svg>
        </div>
      </html>
    </panel>
    <panel>
      <html>
        <h2>Deployment by Duration</h2>
        <div id="longDeployments">
            <svg id="longDeploymentsChart"></svg>
        </div>
      </html>
    </panel>
  </row>
  <row>
        <panel>
          <html>
            <h2>Deployment Outcome by Project</h2>
            <div id="deploymentOutcomeByProject">
              <svg id="deploymentOutcomeByProjectChart"></svg>
            </div>

          </html>
        </panel>
  </row>
  <search id="durationGroupedSearch" ref="OctopusDeploy - DurationGrouped">

   </search>
</dashboard>
